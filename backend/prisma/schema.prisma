generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  avatar    String?
  googleId  String?  @unique
  provider  String   @default("email")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}
